; define-key {{{
(require-python "keymap")
(define (define-key keymap key action)
  (keymap::add_keymap keymap key action))

(define (define-keys keymap lis)
  (define (iter ls)
	(if (null? ls) keymap
	  (begin
		(let* ((pair (car ls))
			   (key (car pair))
			   (func (cadr pair)))
		  (define-key keymap key func))
		(iter (cdr ls)))))
  (iter lis))

